{
  "include": ["src/**/*"],
  "exclude": ["node_modules", "eslint.config.mjs, cypress.config.mjs"],
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES2024",
    "lib": ["dom", "dom.iterable", "ES2024"],
    "types": ["cypress"],
    "module": "esnext",
    "moduleResolution": "Bundler",
    "moduleDetection": "auto",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": ".",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    }
  }
}

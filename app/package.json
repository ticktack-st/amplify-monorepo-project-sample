{
  "name": "amplify-monorepo-project-sample",
  "version": "0.1.0",
  "description": "Amplify Gen2を使ったNext.jsのモノレポサンプルアプリケーションです。",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "httpsdev": "next dev --experimental-https",
    "lint": "stylelint '**/*.css' && next lint",
    "build": "stylelint '**/*.css' && ESLINT_USE_FLAT_CONFIG=true eslint -c eslint.config.mjs && next lint && next build",
    "testbuild": "next build",
    "start": "next start",
    "eslint": "ESLINT_USE_FLAT_CONFIG=true eslint -c eslint.config.mjs",
    "nextlint": "next lint",
    "stylelint": "stylelint '**/*.css'",
    "format": "prettier --config .prettierrc --write .",
    "typecheck": "tsc --skipLibCheck true --noEmit",
    "typecheck:full": "tsc --skipLibCheck false --noEmit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "vitest",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@aws-amplify/adapter-nextjs": "^1.6.3",
    "@aws-amplify/backend-function": "^1.14.1",
